<% unless user == current_user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォローを外す", relationship_path(user.id), method: :delete , class: "btn btn-block btn-sm btn-secondary"%>
  <% else %>
    <%= link_to "フォローをする", relationships_path(user_id: user.id), method: :post , class: "btn btn-block btn-sm btn-primary"%>
    
  <% end %>
<% end %>