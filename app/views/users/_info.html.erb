<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image-icon.jpg" %>

    
      <table class="table">
        <tbody>
          <tr>
            <th scope="row">名前</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th scope="row">自己紹介</th>
            <td><%= @user.introduction %></td>
          </tr>
          <tr>
            <td><%= render 'relationships/follow_btn', user: @user %></td>
            <td>
              <% if @user.id == current_user.id %>
                <%= link_to "マイページ編集", edit_user_path(@user), class: "btn btn-sm btn-success" %>
              <% end %>

            </td>
          </tr>
        </tbody>
      </table>