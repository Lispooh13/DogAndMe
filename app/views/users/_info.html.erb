<!--ユーザー詳細サイドバー-->
<div class="d-flex justify-content-center align-items-center mb-2">
  <%= link_to edit_user_path(user) do %>
    <%= attachment_image_tag user, :profile_image, :fill, 80, 80, format: 'jpeg', fallback: "no-image-icon.jpg", size: "80x80", class: "rounded-circle" %>
  <% end %>
</div>
<div class="text-center align-items-center mb-2">
  <%= user.name %>
</div>
<hr>
<strong>自己紹介</strong><br>
  <% if user.introduction.present? %>
    <%= user.introduction %>
  <% else %>
    <div class="small text-muted">
    （自己紹介文がまだ記入されてません）
    </div>
  <% end %>

<table class="table">
  <tbody>
    <tr>
      <th scope="row">
        投稿数
      </th>
      <td class="align-items-center">
        <%= user.posts.count %>
      </td>
    </tr>
    <tr>
      <th scope="row">
        フォロー中
      </th>
      <td class="align-items-center">
        <%= link_to user_followings_path(user) do %>
          <%= user.followings.count %>
        <% end %>
      </td>
    </tr>
    <tr>
      <th scope="row">
        フォロワー
      </th>
      <td class="align-items-center">
        <%= link_to user_followers_path(user) do %>
          <%= user.followers.count %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>


<div class= "my-4">
  <% if @user.id == current_user.id %>
    <%= link_to " プロフィール編集", edit_user_path(user), class: "fas fa-user-edit btn btn-block btn-outline-secondary" %>
  <% else %>
    <%= render 'relationships/follow_btn', user: user %>
  <% end %>
  <%= link_to " いいね一覧", favorites_user_path(user), class: "fas fa-heart favorites-post btn btn-block btn-outline-secondary"%>
  <%= link_to " わんちゃん", user_dogs_path(user), class: "fas fa-dog dog-link btn btn-block btn-outline-secondary" %>
  <%= link_to " 投稿一覧", user_path(user), class: "fas fa-user btn btn-block btn-outline-secondary"%>
</div>

