<div class="container">
  <div class="row">
    <div class="col-md-9 mx-auto text-center shadow rounded px-0 my-5">
      <h3 class="py-4">マイページ編集</h3>
      <div class="px-5 py-3">
        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group row">
            <div class="col-3"><%= f.label :profile_image, "プロフィール画像" ,class: "form-control-file",style: "font-weight: bold;" %></div>
            <div class="col-9">
              <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no-image-icon.jpg" %>
              <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-3"><%= f.label :name, "ニックネーム" ,style: "font-weight: bold;"%></div>
            <div class="col-5">
              <%= f.text_field :name, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-3"><%= f.label :introduction, "自己紹介" ,style: "font-weight: bold;"%></div>
            <div class="col-9">
              <%= f.text_area :introduction, autofocus: true, class: 'form-control' ,size: "50x5" %>
            </div>
          </div>

          <%= f.submit "変更を保存", class: "btn btn-block btn-success mt-5 mb-5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>