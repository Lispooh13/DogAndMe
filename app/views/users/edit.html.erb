<div class='container'>
  <div class='row mt-4'>
    <h3>マイページ編集</h3>
  </div>
  <div class='row'>
    <div class="mx-auto">

     <%= form_with model:@user, local:true do |f| %>
      <div class="form-group row mt-5">
        <div class="col-3"><%= f.label :profile_image, "プロフィール画像" %></div>
        <div class="col-9">
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg" %>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-3"><%= f.label :name, "名前" %></div>
        <div class="col-5">
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-3"><%= f.label :introduction, "自己紹介" %></div>
        <div class="col-9">
          <%= f.text_area :introduction, autofocus: true, class: 'form-control' ,size: "90x5" %>
        </div>
      </div>


      <div class="form-group row">
        <div class="col-3"></div>
        <div class="col-9"><%= f.submit '変更を保存', class: 'btn btn-success' %></div>
      </div>
     <% end %>
   </div>
  </div>
</div>