<div class='container'>
  <div class='row'>
    <div class="col-5, m-3">
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image-icon.jpg" %>
      <%= @user.name %>
      <% if @user.id == current_user.id %>
        <p><%= link_to "マイページ編集", edit_user_path(@user) %></p>
      <% end %>
    </div>
    
    
    <% @posts.each do |post| %>
    
      <div class="col-5, m-3">
        <%= link_to post_path(post), class: "link" do %>
        
          <% if post.post_images.present? %>
            <% post.post_images.first(1).each do |image| %>
              <%= attachment_image_tag image, :image, format: 'jpeg', fallback: "no-image-icon.jpg",size: '200x150'%><br>
            <% end %>
            
          <% else %>
            <%= image_tag 'no-image-icon.jpg', size: '200x150' %><br>
            
          <% end %>
        
        <% end %>
        
         <%= link_to post.place,post_path(post) %>
      </div>
      
    <% end %>
    <%= paginate @posts %>

  </div>
</div>