<div class="container px-5 px-sm-0">
  <div class="row mt-4">
    <div class="col-md-3">

      <%=render "info" ,user: @user %>
      <div class= "mt-4">
        <%= link_to " ", favorites_user_path(@user), class: "fas fa-heart favorites_post btn btn-block btn-outline-secondary"%>
        <%= link_to " ", user_dogs_path(@user), class: "fas fa-dog dog_link btn btn-block btn-outline-secondary" %>

        <% if @user.id == current_user.id %>
          <%= link_to " ", edit_user_path(@user), class: "fas fa-user-edit btn btn-block btn-outline-secondary" %>
        <% else %>
          <%= render 'relationships/follow_btn', user: @user %>
        <% end %>
      </div>



    </div>

    <div class="col-md-9">
      <h3>投稿一覧</h3>
      <div class="row m-3">
        <%= render "posts/index", posts: @posts %>
      </div>
      <%= paginate @posts %>
  </div>
</div>
