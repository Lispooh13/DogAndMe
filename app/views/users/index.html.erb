<div class='container px-5 px-sm-0'>
  <div class='row mt-4'>
    <h3>ユーザー一覧</h3>
      <table class="table table-sm">
        <thead>
          <tr>
            <th></th>
            <th>名前</th>
            <th colspan="3"></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 70, 70, fallback: "no-image-icon.jpg" ,size: '50x50' ,class: "rounded-circle"%></td>
            <td class="align-middle"><%= link_to user.name , user_path(user) %></td>
            <td><%= render 'relationships/follow_count', user: user %></td>
            <td class="align-middle"><%= render 'relationships/follow_btn', user: user %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<%= paginate @users %>
