<div class="container px-2 px-sm-0">
  <div class="row mt-4">
    <div class="col-md-3">
      <%=render "info" ,user: @user %>
    </div>
    <div class="col-md-9">
      <div class="d-flex">
        <h3 style='color: #82654D; font-size: 35px;'>Favorites</h3>
        <p class='mt-3' style='font-size: 20px;'>ーいいね一覧ー</p>
      </div>

      <div class="row mb-4">
        <% if @favorites_posts.present? %>
          <%= render 'posts/index', posts: @favorites_posts %>
        <% end %>
      </div>
      <%= paginate @favorites_posts %>
    </div>
  </div>
</div>

