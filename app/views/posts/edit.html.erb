<div class='container'>
  <h3><span style="margin-left:50px">投稿編集</span></h3>
  <div class='row mt-4'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     
     <%= form_with model:@post, local:true do |f| %>
      <div class="form-group row mt-5">
        <div class="col-3"><%= f.label :image, "画像" %></div>
        <div class="col-9">
          <%= f.attachment_field :post_images_images, multiple: true %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-3"><%= f.label :place, "場所名" %></div>
        <div class="col-9">
          <%= f.text_field :place, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-3"><%= f.label :address, "住所" %></div>
        <div class="col-9">
          <%= f.text_field :address, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-3"><%= f.label :purpose, "主な目的" %></div>
        <div class="col-9">
          <!--<= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "--選択してください--"} ) %>-->
        </div>
      </div>

      <div class="form-group row">
        <div class="col-3"><%= f.label :body, "感想" %></div>
        <div class="col-9">
          <%= f.text_area :body, class: 'form-control' %>
        </div>
      </div>

       

      <div class="form-group row">
        <div class="col-3"></div>
        <div class="col-9"><%= f.submit '変更を保存', class: 'btn btn-success' %></div>
      </div>
     <% end %>
   </div>
  </div>
</div>