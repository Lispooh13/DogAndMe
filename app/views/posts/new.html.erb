<div class="container">
  <div class="row">
    <div class="col-md-9 mx-auto text-center shadow rounded px-0 my-5">
      <h3 class="py-4">新規投稿</h3>
      <%= render "error_messages", post: @post %>
      <div class="px-5 py-3">
        <%= form_with model:@post, local:true do |f| %>
          <div class="form-group row">
            <div class="col-2"><%= f.label :image, "画像(複数可)" ,class: "form-control-file" ,style: "font-weight: bold;"%></div>
            <div class="col-10">
              <%= f.attachment_field :post_images_images, multiple: true %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-2"><%= f.label :place, "場所名" ,style: "font-weight: bold;"%></div>
            <div class="col-10">
              <%= f.text_field :place, autofocus: true, :placeholder => "◯◯カフェ", class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-2"><%= f.label :address, "住所" ,style: "font-weight: bold;"%></div>
            <div class="col-10">
              <%= f.text_field :address, :placeholder => "◯◯県△△市□□町1234", class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-2"><%= f.label :category, "カテゴリー" , style: "font-weight: bold;"%></div>
            <div class="col-10">
              <%= f.select :category, Post.categories.keys, {prompt: "選択してください"}, class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-2"><%= f.label :body, "説明" , style: "font-weight: bold;"%></div>
            <div class="col-10">
              <%= f.text_area :body, :placeholder => "屋外、屋内ともに愛犬と一緒に入れるカフェです。ドッグカフェではないので、リード着用が必須です。お水の提供サービスと犬用フードも数種類ありました。テラス席のソファから見える景色は緑が美しく、きれいな写真が撮れました！", class: "form-control",size: "50x6" %>
            </div>
          </div>
          
          <div class="form-group row">
            <div class="col-2"><%= f.label :hashbody, "ハッシュタグ入力欄" , style: "font-weight: bold;"%></div>
            <div class="col-10">
              <%= f.text_area :hashbody, :placeholder => "#お水提供サービス #犬用フード #全犬種可 #屋内OK #写真映え #ケージ不要 ", class: "form-control",size: "50x3" %>
            </div>
          </div>

          <%= f.submit "\uf1d8投稿", style:'font-family: FontAwesome', class: "btn btn-block btn-success mt-5 mb-5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
