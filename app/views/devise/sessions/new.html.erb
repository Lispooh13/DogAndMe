<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto text-center shadow rounded px-0 my-5">
      <h5 class="bg-light py-4">ログイン</h5>
      <div class="p-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-user"></i></span>
            </div>
            <%= f.text_field :name, autofocus: true, autocomplete: "name" , class:"form-control",placeholder: "ニックネーム"%>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-lock"></i></span>
            </div>
            <%= f.password_field :password, autocomplete: "current-password" , class:"form-control" ,placeholder: "パスワード"%>
          </div>
          
          <%= f.submit "ログイン", class: "btn btn-block btn-info mt-5 mb-5" %>
        <% end %>
        <%= link_to "新規登録はこちら", new_user_registration_path, class: "btn btn-block btn-secondary" %>
      </div>
    </div>
  </div>
</div>
