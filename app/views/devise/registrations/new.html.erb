<div class="container">
  <div class="row">
    <h3><span style="margin-left:50px">新規登録</span></h3>
  </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>


  <div class="form-inline form-group row mt-5">
    <%= f.label :"名前", class: "col-4 control-label" %>
    <%= f.text_field :name, autofocus: true , class: "col-7 form-control" ,:placeholder =>"あゆみ"%>
  </div>


  <div class="form-inline form-group row mt-3">
    <%= f.label :"メールアドレス", class:"col-4" %>
    <%= f.email_field :email, class:"col-7 form-control ",:placeholder =>"sample@example.com"%>
  </div>

  <div class="form-inline form-group row mt-3">
    <%= f.label :"パスワード（6文字以上）", class:"col-4 mt-2" %>
    <%= f.password_field :password, autocomplete: "new-password" , class:"col-7 form-control"%>
  </div>

  <div class="form-inline form-group row mt-3">
    <%= f.label :"パスワード（確認用）", class:"col-4 mt-2" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"col-7 form-control" %>
  </div>

  <div class="form-inline form-group row mt-3">
    <%= f.label :" ", class:"col-4" %>
    <%= f.submit "新規登録", class: "btn btn-success"%>
  </div>

    <% end %>

</div>