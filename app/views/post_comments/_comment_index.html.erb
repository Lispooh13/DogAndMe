<% post.post_comments.each do |post_comment| %>
  <% post_comment_user = post_comment.user %>
  <div class="form-inline">
    <%= link_to user_path(post_comment_user) do%>
      <%= attachment_image_tag post_comment.user, :profile_image, format: 'jpeg', size: "30x30", fallback: "no-image-icon.jpg",class: "rounded-circle" %>
      <%= post_comment_user.name %>
    <% end %>
  </div>
  <%= post_comment.comment %><br>
    <% if post_comment.user == current_user %>
      <%= link_to "削除", post_post_comment_path(post_comment.post_id, post_comment.id), class: "btn btn-sm btn-outline-danger", method: :delete, remote: true %>
    <% end %>
  <hr>  
<% end %>
