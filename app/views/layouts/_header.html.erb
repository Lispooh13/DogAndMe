<header class="shadow-sm">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <a class="navbar-brand p-3" href="/"><span>ワンジョイ！</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <li>
            <%= link_to posts_path ,class: 'nav-link text-dark' do%>
            <i class="fas fa-dog"></i>投稿一覧
            <% end %>
          </li>

          <% if user_signed_in? %>
          <li>
            <%= link_to new_post_path ,class: 'nav-link text-dark' do%>
            <i class="far fa-plus-square"></i>新規投稿
            <% end %>
          </li>

          <li>
            <%= link_to user_path(current_user.id) ,class: 'nav-link text-dark' do%>
            <i class="fas fa-user"></i>マイページ
            <% end %>
          </li>

          <li>
            <%= link_to users_path ,class: 'nav-link text-dark' do%>
            <i class="fas fa-users"></i>ユーザー一覧
            <% end %>
          </li>

          <li>
            <%= link_to destroy_user_session_path, :method => :delete ,class: 'nav-link text-dark' do %>
            <i class="fas fa-sign-out-alt"></i> ログアウト
            <% end %>
          </li>

          <%= render 'layouts/notification' %>


          <% else %>
          <li>
            <%= link_to about_path ,class: 'nav-link text-dark' do%>
            <i class="fas fa-paw"></i>ワンジョイとは？
            <% end %>
          </li>

          <li>
            <%= link_to new_user_registration_path ,class: 'nav-link text-dark' do%>
            <i class="fas fa-user-plus"></i>新規登録
            <% end %>
          </li>

          <li>
            <%= link_to new_user_session_path ,class: 'nav-link text-dark' do%>
            <i class="fas fa-sign-in-alt"></i>ログイン
            <% end %>
          </li>

          <% end %>

          <li>
            <%= form_with(url: search_path, local: true, method: :get, class: "nav-link search-form") do |f| %>
              <%= f.text_field :keyword, placeholder: "キーワードを入力",size: "20", class: "search-input" %>
              <%= f.submit "検索",class: "search-btn" %>
            <% end %>
          </li>


        </ul>
      </div>
    </div>
  </nav>
</header>

