<% visitor = notification.visitor %>
<% visited = notification.visited %>
  <div class="col-md-6 m-3">
    <div class="form-inline">
      <span>
        <%= link_to user_path(visitor) do %>
          <%= attachment_image_tag visitor, :profile_image, fallback: "no-image-icon.jpg", size: "50x50", class: "rounded-circle" %>
            <strong><%= visitor.name %></strong>
          <%= 'さんが' %>
        <% end %>
      </span>
    </div>
  </div>
      <% case notification.action %>
      <% when 'follow' then %>
        <div class="col-md-6"><%= "あなたをフォローしました" %></div>
      <% when 'favorite' then %>
        <div class="col-md-6 form-inline"><%= link_to 'あなたの投稿', notification.post, style: "font-weight: bold;" %>
        <%= "にいいねしました" %></div>
      <% when 'comment' then %>
        <% if notification.post.user_id == visited.id %>
          <div class="col-md-6 form-inline"><%= link_to "あなたの投稿", notification.post, style: "font-weight: bold;" %>
        <% else %>
          <span>
            <div class="col-md-6">
              <%= link_to post_path(notification.post) do %>
                <%= attachment_image_tag visitor, :profile_image, fallback: "no-image-icon.jpg", size: "50x50", class: "rounded-circle" %>
                <strong><%= notification.post.user.name + 'さんの投稿' %></strong>
              <% end %>
            </div>
        <% end %>
            <%= "にコメントしました" %></div>
          </span>

        <div class="col-md-6">
          <p class="text-muted mb-0">
            <%= PostComment.find_by(id: notification.post_comment_id)&.comment %>
          </p>
        </div>
      <% end %>
      <div class="col-md-6">
        <div class="small text-muted text-right">
          <i class="far fa-clock"></i><%= time_ago_in_words(notification.created_at).upcase %>前
        </div>
      </div>
      <hr>